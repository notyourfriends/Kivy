<Login>:
    MDCard:
        size: (300,400)
        size_hint: None, None
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        elevation: 2
        padding: 25
        spacing: 25
        orientation: 'vertical'
        
        MDLabel:
            id: welcome_label
            text: 'Log In'
            font_size: 30
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 10
        
        MDTextField:
            id: user
            hint_text:'Username'
            icon_right: 'account'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x':.5}
        
        MDTextField:
            id: pw
            hint_text:'Password'
            icon_right: 'eye-off'
            size_hint_x: None
            password: True
            width: 200
            font_size: 18
            pos_hint: {'center_x':.5}

        MDRoundFlatButton:
            text:'Log In'
            font_size: 12
            pos_hint: {'center_x':.5}
            on_press: root.logger()
        
        MDRoundFlatButton:
            text:'Clear'
            font_size: 12
            pos_hint: {'center_x':.5}
            on_press: root.clear()
        

    
